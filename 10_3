package come.a;

import java.util.Random;

public class aa {
    public static void main(String[] args) {
        Random a = new Random();
    int i = 0;
    while (i<=10){
        i++;
        int n = a.nextInt(10);
        System.out.println(n);
    }
    }
    
}
