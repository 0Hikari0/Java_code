package come.a;

import java.util.Scanner;

public class aa {
    public static void main(String[] args) {
        boolean flag = AA(10);
        System.out.println(flag);
    }

    public static boolean AA(int a) {
        if (a % 2 == 0) {
            return true;
        } else {
            return false;
        }
    }
}


