package come.a;
import java.util.Scanner;
public class aa {
    public static void main(String[] args) {
        isEvenNumber();
    }

    public static void isEvenNumber() {
        System.out.println("请输入任意整数");
       Scanner sc = new Scanner(System.in);
       int n = sc.nextInt();
        if (n % 2 == 0) {
            System.out.println(true);
        } else {
            System.out.println(false);
        }

    }
}

