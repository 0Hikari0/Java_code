package come.a;

import java.util.Scanner;

public class b {
    public static void main(String[] args) {
        System.out.println("开始");

        int a = 10;
        int b = 20;

        if (a == b) {
            System.out.println("a=b");
        }
        System.out.println("结束");
    }
}

