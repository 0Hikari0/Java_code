package come.a;

import java.util.Scanner;

public class b {
    public static void main(String[] args) {
        int a = 10;
        int b = 20;
        b=5;
        if (a > b) {
            System.out.println("a>b");
        } else {
            System.out.println("a<b");
        }
    }
}
