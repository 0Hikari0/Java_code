package come.a;

import java.util.Scanner;

public class b {
    public static void main(String[] args) {
        System.out.println("请输入数字");
            Scanner sc = new Scanner(System.in);
            int number= sc.nextInt();
            if(number %2==0){
                System.out.println(number+"是偶数");
            }else{
                System.out.println(number+"是奇数");
            }
    }
}
